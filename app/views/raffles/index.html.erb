<h1>Listing raffles</h1>

<table>
  <thead>
    <tr>
      <th>Sig</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffles.each do |raffle| %>
      <tr>
        <td><%= raffle.sig %></td>
        <td><%= raffle.email %></td>
        <td><%= link_to 'Show', action: "show", id: raffle.sig %></td>
        <td><%= link_to 'Edit', action: "edit", id: raffle.sig %></td>
        <td><%= link_to 'Destroy', {action: "destroy", id: raffle.sig}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Raffle', new_raffle_path %>
